<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f416d"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".HitungActivity">

    <ImageView
        android:id="@+id/imgview_hitung"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:src="@drawable/mathematics" />

    <TextView
        android:id="@+id/txtview_LP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Hitung Volume dan Luas Permukaan Bola"
        android:textColor="#b2e4d5"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/jari_jari"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Masukkan jari - jari"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#b2e4d5"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_hvolume"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Hitung Volume"
            android:background="#85ef47"
            android:textColor="#11144c"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_hluaspm"
            android:layout_width="92dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#85ef47"
            android:padding="5dp"
            android:textColor="#11144c"
            android:text="Hitung Luas Permukaan"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Volume Bola : "
            android:textColor="#b2e4d5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hasil_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ff0"
            android:textColor="#010059"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/luaspermukaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Luas Permukaan Bola :"
            android:textColor="#b2e4d5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hasil_luaspm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ff0"
            android:textColor="#010059"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>